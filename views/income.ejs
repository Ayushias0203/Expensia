<%- include('_header'); -%>

    <div class="row">
        <div class="col-lg-5 text-center">
            <h3>Income</h3>
            <form action="/addMoney" method="post">
                <div class="input-group income-expense-input mx-auto my-2">

                    <input type="text" class="form-control" name="income" aria-label="Text input with dropdown button"
                        placeholder="Amount">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <label class="input-group-text mt-3" for="inputGroupSelect01">Category</label>
                        </div>
                        <select class="custom-select mt-3" name="category" id="inputGroupSelect01">
                            <option selected>Choose...</option>
                            <option value="Paycheck">Paycheck</option>
                            <option value="Interest">Interest</option>
                            <option value="Gift">Gift</option>
                            <option value="Bonus">Bonus</option>
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text mt-3" for="inputGroupSelect01">Mode</label>
                        </div>
                        <select class="custom-select mt-3" name="mode" id="inputGroupSelect01">
                            <option selected>Choose...</option>
                            <option value="Cash">Cash</option>
                            <option value="UPI">UPI</option>
                            <option value="Cheque">Cheque</option>
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <input type="text" name="note" class="form-control" placeholder="Note for the transaction "
                            aria-label="Recipient's username" aria-describedby="basic-addon2">
                    </div>
                   
                </div>

                <button class="btn btn-danger btn-large update my-2" type="submit">Update Income</button>
            </form>
        </div>

        <div class="col-lg-2 text-center bal mx-auto">
            <h3>Balance</h3>
            <div class="alert alert-danger" role="alert">
                Rs <%= User.balance %>
            </div>
        </div>

        <div class="col-lg-5 text-center">
            <h3>Expense</h3>
            <form action="/subMoney" method="post">
                <div class="input-group income-expense-input mx-auto my-2">
                    <input type="text" class="form-control" name="expense" aria-label="Text input with dropdown button"
                        placeholder="Amount">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <label class="input-group-text mt-3" for="inputGroupSelect01">Category</label>
                        </div>
                        <select class="custom-select mt-3" name="category" id="inputGroupSelect01">
                            <option selected>Choose...</option>
                            <option value="Groceries">Groceries</option>
                            <option value="Education">Education</option>
                            <option value="Transportation">Transportation</option>
                            <option value="Gift">Gift</option>
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text mt-3" for="inputGroupSelect01">Mode</label>
                        </div>
                        <select class="custom-select mt-3" name="mode" id="inputGroupSelect01">
                            <option selected>Choose...</option>
                            <option value="Cash">Cash</option>
                            <option value="UPI">UPI</option>
                            <option value="Cheque">Cheque</option>
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" name="note" placeholder="Note for the transaction "
                            aria-label="Recipient's username" aria-describedby="basic-addon2">
                    </div>
                    
                </div>

                <button type="submit" class="btn btn-danger btn-large update my-2">Update Expense</button>
            </form>
        </div>

    </div>





    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
    <!-- Optional JavaScript -->
    <script>
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
