<div class="box">

    <ul>

          <%  newListItems.forEach(function(items){ %>
            <form action="/delete" method="post">
                
                <%if(items.userid === User.id){%>
                <div class="item">
                    <input name="checkbox" value="<%=items._id%>" onChange="this.form.submit()" type="checkbox" >
                    <p><%= items.name %></p>
                </div>
                <%}%>
                
            </form>
        <% }); %>

    </ul>
    
    <form class="item" action="/newlist" method="POST">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button class="addbtn" type="submit" name="button">+</button>
    </form>
</div>

